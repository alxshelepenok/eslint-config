{
  "name": "@alxshelepenok/eslint-config",
  "version": "1.0.80",
  "description": "My shareable eslint config",
  "keywords": [
    "eslint",
    "config"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxshelepenok/eslint-config.git"
  },
  "license": "MIT",
  "author": "Alexander Shelepenok <alxshelepenok@gmail.com>",
  "main": "target/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf target",
    "format": "npm run format:ts",
    "format:ts": "eslint --cache --ext .ts src --fix && prettier --write .",
    "lint": "npm run lint:ts",
    "lint:commit": "commitlint --edit",
    "lint:staged": "lint-staged",
    "lint:ts": "eslint \"src\" --ext .ts && prettier --check .",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test": "ts-node node_modules/tape/bin/tape ./src/*.test.ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:ts"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/eslint": "8.4.5",
    "@types/node": "17.0.25",
    "@types/tape": "4.13.2",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "8.20.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.3",
    "tape": "5.3.2",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "peerDependencies": {
    "eslint": "^7.7.0 || ^8.2.0"
  }
}
